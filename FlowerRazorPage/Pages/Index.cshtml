@page
@model IndexModel
@{
    ViewData["Title"] = "Flower Shop";
}

<div class="banner">
    <img src="https://png.pngtree.com/background/20230614/original/pngtree-beautiful-bouquet-of-flowers-is-shown-picture-image_3511221.jpg" alt="Flower Shop Banner" class="banner-image" />
</div>

<h1 class="text-center mb-5">@ViewData["Title"]</h1>

<style>
    .banner {
        width: 100%;
        margin-bottom: 20px;
    }

    .banner-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 15px;
    }

    .custom-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card {
        transition: transform 0.2s;
        border: none;
        border-radius: 15px;
    }

        .card:hover {
            transform: scale(1.01);
        }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #2c3e50; /* Darker text color */
    }

    .card-text {
        font-size: 1rem;
        color: #34495e; /* Dark gray color for description */
    }

    .category {
        font-weight: bold;
        color: #2980b9; /* Blue color for category */
    }

    .price {
        font-size: 1.2rem;
        color: #27ae60; /* Green color for price */
        font-weight: bold;
    }

    .creator {
        font-style: italic;
        color: #7f8c8d; /* Light gray color for creator */
    }

    .row {
        margin: 0;
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var flower in Model.Flowers)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@flower.FlowerMedia.FirstOrDefault()?.ImageUrl" alt="@flower.Name" class="card-img-top custom-image" />
                    <div class="card-body">
                        <h5 class="card-title">@flower.Name</h5>
                        <p class="card-text category">Category: @flower.Category</p>
                        <p class="card-text">@flower.Description</p>
                        <p class="card-text price">Price: @flower.Price $</p>
                        <p class="card-text creator">Created by: @flower.Account.name</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
