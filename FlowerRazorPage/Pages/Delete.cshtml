@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Flower";
}

<h1>Delete Flower</h1>

<h3>Are you sure you want to delete this flower?</h3>
<div>
    <h4>Flower</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Flower.Name</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Flower.Category</dd>
    </dl>
</div>
<form method="post">
    <input type="hidden" asp-for="Flower.Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
